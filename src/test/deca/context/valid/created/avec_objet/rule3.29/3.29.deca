class ClasseCondition {
    boolean verifierCondition(int valeur) {
        return valeur > 0;  // Expression retournant un booléen
    }

    void methodeAvecCondition() {
        int valeurTest = 5;
        if (this.verifierCondition(valeurTest)) {
            println("Condition vraie");
        } else {
            println("Condition fausse");
        }
    }
}

class Test {
    void executionTest() {
        ClasseCondition obj = new ClasseCondition();
        obj.methodeAvecCondition();
    }
}

// Programme principal
{
    Test testProgramme = new Test();
    testProgramme.executionTest();
}
